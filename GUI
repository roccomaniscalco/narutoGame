import javafx.application.Application;
import javafx.geometry.Insets;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.layout.TilePane;
import javafx.stage.Stage;
import java.util.ArrayList;

public class GUI extends Application
{
    private ArrayList<Button> butts = new ArrayList<>();
    private Card nar = new Card("Naruto");

    public static void main(String[] args)
    {
        launch(args);
    }

    public void start(Stage primaryStage) throws Exception
    {
        primaryStage.setTitle("Rocco Rules XD");

        TilePane layout = new TilePane(10,10);
        layout.setPadding(new Insets(10, 10, 10, 10));

        for(String move : nar.getMoves()) //creates button for each move in moves
            butts.add(new Button(move));

        for(Button butt : butts)
            butt.setPrefSize(600,50);

        layout.getChildren().addAll(butts);

        Scene scene1 = new Scene(layout,500,500);

        butts.get(0).setOnAction(e -> System.out.println("action when button is clicked"));

        primaryStage.setScene(scene1);
        primaryStage.show();
    }
}
